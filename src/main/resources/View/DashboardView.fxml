<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" styleClass="main-container" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.appmanager.appmanager.Controller.DashboardController">

    <top>
        <HBox alignment="CENTER" spacing="10" styleClass="title-bar">
            <Region HBox.hgrow="ALWAYS" />
            <Label styleClass="title-label" text="Instalador de Aplicaciones" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="minimizeButton" onAction="#minimizarVentana" styleClass="window-control" text="_" />
            <Button fx:id="closeButton" onAction="#cerrarAplicacion" styleClass="window-control close-button" text="X" />
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;" styleClass="content-panel" VBox.vgrow="ALWAYS">

            <!-- Barra de herramientas -->
            <HBox alignment="CENTER_LEFT" spacing="15" HBox.hgrow="ALWAYS">
                <Label styleClass="title-label" text="Aplicaciones Disponibles" />
                <TextField fx:id="campoBusqueda" maxWidth="150" promptText="Buscar aplicaciones..." HBox.hgrow="ALWAYS" />
                <ComboBox fx:id="comboFiltroCategoria" maxWidth="150" prefHeight="47.0" prefWidth="93.0" promptText="CategorÃ­a" />
                <Button onAction="#seleccionarTodo" prefHeight="49.0" prefWidth="170.0" styleClass="secondary-button" text="Seleccionar Todo" />
                <Button fx:id="botonInstalar" onAction="#iniciarInstalacion" prefHeight="55.0" prefWidth="170.0" styleClass="primary-button" text="Instalar Seleccionadas" />
                <Button fx:id="botonProxy" onAction="#cambiarProxy" prefHeight="55.0" prefWidth="170.0" styleClass="primary-button" text="Configurar Proxy" />
            <Button fx:id="botonDNS" onAction="#ConfigurarDNS" prefHeight="55.0" prefWidth="170.0" styleClass="primary-button" text="Configurar DNS" />
            </HBox>

            <!-- Tabla de aplicaciones -->
            <TableView fx:id="tablaAplicaciones" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <!-- Barra de estado -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <ProgressBar fx:id="barraProgreso" progress="0" />
                <Label fx:id="etiquetaEstado" styleClass="status-label" text="Selecciona las aplicaciones que deseas instalar" />
            </VBox>

        </VBox>
    </center>

</BorderPane>
